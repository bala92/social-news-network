<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.label :title %><br>
    <%= f.text_field :title, id:"title", :class=>"form-control" %>
  </div>
  <div class="field form-group">
    <%= f.label :body %><br>
    <%= f.text_area :body, id:"froala-editor", class:"small_text" %>
  </div>
  <div class="field form-group">
    <%= f.label :thumbnail %><br>
    <%= f.text_field :thumbnail, id:"thumbnail", :class=>"form-control", :rows=>"10" %>
  </div>
  <div class="actions">
    <%= f.submit :class=>"btn btn-primary", id:"submit" %>
  </div>
<% end %>

<%= javascript_tag do %>
  $(function() {
    $('textarea#froala-editor').froalaEditor({
        height: '300'
    })
  });
<% end %>