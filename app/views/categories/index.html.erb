<div class="row grid">
  <% @categories.each do |category| %>
      <div class="col-sm-6 col-md-3 grid-item">
        <div class="thumbnail">
          <img src="<%= category.thumbnail %>" alt="<%= category.name %>">
          <div class="caption">
            <h3><%= category.name %></h3>
            <p><%= category.description %></p>
            <p><a href="<%= url_for controller: 'posts', action: 'index', category_id: category.id %>" class="btn btn-primary" role="button">View</a></p>
          </div>
        </div>
      </div>
  <% end %>
</div>

